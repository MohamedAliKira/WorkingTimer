@namespace WorkingTimer.Client.Components

<div class="blazor-modal @cssClass">
    <div class="blazor-modal-content">
        <div class="blazor-modal-header">
            <h5 class="blazor-modal-title">@selectedDay.Date.ToString("D")</h5>
            <span class="blazor-modal-close-button" @onclick="() => IsOpened = false">X</span>
        </div>
        <MudCard>
            <EditForm Model="events" OnValidSubmit="AddEventTimer">
                <div class="blazor-modal-body">
                    <MudCardContent>

                        <MudTimePicker Label="24 hours" @bind-Time="events.StartTime" />
                        <MudTimePicker Label="24 hours" @bind-Time="events.EndTime" />
                        <div class="d-flex">
                            <MudRadioGroup @bind-SelectedOption="events.Subject">
                                <MudRadio Option="@("")">Ordinaire</MudRadio>
                                <MudRadio Option="@("Mission")" Color="Color.Primary">Mission</MudRadio>
                                <MudRadio Option="@("Ferier")" Color="Color.Secondary">chômée et payée</MudRadio>
                            </MudRadioGroup>
                        </div>

                    </MudCardContent>
                </div>
                <div class="blazor-modal-footer">
                    <MudCardActions>
                        <MudButton ButtonType="ButtonType.Submit" Variant="Variant.Filled" Color="Color.Primary"
                                   Disabled="@_isBusy" Class="ml-auto">Enregistrer</MudButton>
                    </MudCardActions>
                </div>
            </EditForm>
        </MudCard>
    </div>
</div>