@page "/"
@using WorkingTimer.Shared 
<!--HeaderPage-->
<header>
    <h3>Bienvenue dans l'application "Working Timer!"</h3>
    <p>C'est une application qui vous permet de calculer votre volume horaire et de gérer l'assiduité dans votre établissement </p>

    <!--NotAuthenticated Users-->
    <AuthorizeView>
        <NotAuthorized>
            <p>Veuillez vous identifier pour accéder a votre espace calendrier</p>
            <a href="/authentication/login" class="login-button shadow-effect"> <img src="images/login.png" />&nbsp;&nbsp;Connexion </a>
        </NotAuthorized>
    </AuthorizeView>
</header>

<!-- Calender Component-->
<div class="row">
    <!--Calender-->
    <div class="col-sm-12 col-md-12 col-lg-9">
        <Calender Select_Day="Select_Day" />
        <AddEvent IsOpened="isOpened" selectedDay="selected_Day">
        </AddEvent>
    </div>
    <!--Informations-->
    <div class="col-sm-12 col-md-12 col-lg-3">
        <Informations />
    </div>
</div>

@code {
    private CalendarDay selected_Day = new CalendarDay { Date = DateTime.Now };
    bool isOpened = false;

    void Select_Day(CalendarDay receivedDay)
    {
        selected_Day = receivedDay;
        isOpened = true;
    }
}