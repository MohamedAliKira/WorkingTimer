@page "/"
@using WorkingTimer.Shared
<!--HeaderPage-->
<header>
    <div class="row">
        <div class="col-md-12 col-lg-8">
            <h3>Bienvenue dans l'application "Working Timer!"</h3>
            <p>C'est une application qui vous permet de calculer votre volume horaire et de gérer l'assiduité dans votre établissement </p>
        </div>
        <div class="information-globale col-md-12 col-lg-3">
            <span style="text-decoration:underline; font-weight:bolder">Informations</span>
            <p class="mt-3">
                Total jours dans un mois : <b>22</b> J
                <br />
                Total d'heure au minimun : <b>176</b> H
            </p>
        </div>
    </div>
    <!--NotAuthenticated Users-->
    <AuthorizeView>
        <NotAuthorized>
            <a href="/authentication/login" class="login-button shadow-effect" title="Veuillez vous identifier pour accéder a votre espace calendrier"> 
                <img src="images/login.png" />&nbsp;&nbsp;Connexion 
            </a>
        </NotAuthorized>
        <Authorized>
            <!-- Calender Component-->
            <div class="row">
                <Calender />
            </div>
        </Authorized>
    </AuthorizeView>
</header>



